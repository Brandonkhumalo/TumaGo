<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.verification"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/tuma_go_logo"
            android:layout_marginTop="-120dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Verification Code"
            android:textSize="25dp"
            android:textColor="@color/blackish"
            android:gravity="center"
            android:layout_marginTop="-120dp"/>

        <TextView
            android:id="@+id/emailOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/sent"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/blackish"
            android:layout_marginTop="2dp"/>

        <LinearLayout
            android:id="@+id/otpContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:gravity="center">

            <EditText android:id="@+id/otp1" style="@style/OtpBox" />
            <EditText android:id="@+id/otp2" style="@style/OtpBox" />
            <EditText android:id="@+id/otp3" style="@style/OtpBox" />
            <EditText android:id="@+id/otp4" style="@style/OtpBox" />
            <EditText android:id="@+id/otp5" style="@style/OtpBox" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Didn't receive OTP code?"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="@color/blackish"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/resendOtp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Resend Otp"
            android:textSize="16sp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:textColor="@color/dark_blue"
            android:layout_marginTop="2dp"/>

        <Button
            android:id="@+id/verify"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="Verify &amp; Proceed"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/dark_blue"
            android:visibility="gone"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>