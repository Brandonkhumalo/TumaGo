<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:map="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.Register"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/personalInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_marginHorizontal="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Please fill in the form below"
            android:fontFamily="sans-serif-black"
            android:textSize="20sp"
            android:textColor="@color/blackish"
            android:gravity="center"/>

        <EditText
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Full name(s)"
            android:background="@drawable/background_input2"
            android:padding="12dp"
            android:textColorHint="@color/blackish"
            android:inputType="textPersonName"
            android:textColor="@color/blackish"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"/>

        <EditText
            android:id="@+id/surname"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Surname"
            android:background="@drawable/background_input2"
            android:padding="12dp"
            android:textColorHint="@color/blackish"
            android:inputType="textPersonName"
            android:textColor="@color/blackish"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"/>

        <EditText
            android:id="@+id/phoneNumber"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="(+263)00 000 0000"
            android:background="@drawable/background_input2"
            android:padding="12dp"
            android:textColorHint="@color/blackish"
            android:inputType="phone"
            android:textColor="@color/blackish"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Residential Address"
            android:fontFamily="sans-serif-medium"
            android:textSize="18dp"
            android:gravity="center"
            android:textColor="@color/blackish"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/userStreet"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Street Address"
            android:background="@drawable/background_input2"
            android:padding="12dp"
            android:textColorHint="@color/blackish"
            android:inputType="text"
            android:textColor="@color/blackish"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"/>

        <EditText
            android:id="@+id/userAddress"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Address Line"
            android:background="@drawable/background_input2"
            android:padding="12dp"
            android:textColorHint="@color/blackish"
            android:inputType="text"
            android:textColor="@color/blackish"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"/>

        <EditText
            android:id="@+id/userProvince"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Province"
            android:background="@drawable/background_input2"
            android:padding="12dp"
            android:textColorHint="@color/blackish"
            android:inputType="text"
            android:textColor="@color/blackish"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/userCity"
                android:layout_width="175dp"
                android:layout_height="50dp"
                android:hint="City"
                android:background="@drawable/background_input2"
                android:padding="12dp"
                android:textColorHint="@color/blackish"
                android:inputType="text"
                android:textColor="@color/blackish"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"/>

            <EditText
                android:id="@+id/userPostalCode"
                android:layout_width="175dp"
                android:layout_height="50dp"
                android:hint="Postal Code"
                android:background="@drawable/background_input2"
                android:padding="12dp"
                android:textColorHint="@color/blackish"
                android:inputType="number"
                android:textColor="@color/blackish"
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="10dp"/>

        </LinearLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/continueBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            map:cardElevation="10dp"
            map:strokeWidth="2dp"
            map:strokeColor="@color/dark_blue"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Continue"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"
                    android:textColor="@color/dark_blue"
                    android:layout_gravity="center"/>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/pinLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Password"
            android:textSize="25dp"
            android:textColor="@color/blackish"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"/>

        <EditText
            android:id="@+id/password1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Password"
            android:background="@drawable/background_input2"
            android:padding="12dp"
            android:textColorHint="@color/blackish"
            android:inputType="textPassword"
            android:textColor="@color/blackish"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Confirm Password"
            android:textSize="20dp"
            android:textColor="@color/blackish"
            android:fontFamily="sans-serif-medium"
            android:gravity="center"
            android:layout_marginTop="10dp"/>

        <EditText
            android:id="@+id/password2"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Password"
            android:background="@drawable/background_input2"
            android:padding="12dp"
            android:textColorHint="@color/blackish"
            android:inputType="textPassword"
            android:textColor="@color/blackish"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="10dp"/>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/regBtn"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            map:cardElevation="10dp"
            map:strokeWidth="2dp"
            map:strokeColor="@color/dark_blue"
            android:layout_marginHorizontal="20dp"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Confirm Registration"
                android:fontFamily="sans-serif-medium"
                android:textSize="18sp"
                android:layout_marginRight="10dp"
                android:textColor="@color/dark_blue"
                android:layout_gravity="center"/>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/progressBar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/light_blue"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_gravity="center"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>